{
  "name": "node-lambda-app",
  "version": "1.0.0",
  "description": "Express app deployed using Serverless",
  "main": "src/handler.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/handler.js",
    "dev": "npx kill-port 8040 && nodemon --watch src --ext js,json,yml --exec \"npx serverless offline\"",
    "deploy": "npx serverless deploy",
    "test": "jest --detectOpenHandles"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.828.0",
    "@aws-sdk/s3-request-presigner": "^3.828.0",
    "aws-sdk": "^2.1692.0",
    "aws-serverless-express": "^3.4.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.1",
    "multer": "^2.0.1",
    "serverless-http": "^3.0.1",
    "supertest": "^7.1.1"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "jest": "^30.0.0",
    "mongodb-memory-server": "^8.12.1",
    "serverless": "^3.40.0",
    "serverless-offline": "^12.0.4"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
